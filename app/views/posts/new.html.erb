<div class="container full-screen">
  <h1>New post</h1>
  <%= simple_form_for @post do |f| %>
  <%= f.input :card_photo, as: :attachinary, required: true %>
  <%= f.input :title, required: true %>
  <%= f.input :category_id, collection: Category.all, required: true %>
  <%= f.input :introduction, required: true %>
  <div class="">
  <%= f.bootsy_area :content, required: true %>
  </div>
  <%= f.button :submit, class: "btn btn-primary" %>
  <%= link_to "Cancel", posts_path, class: "btn btn-default" %>
  <% end %>
</div>

