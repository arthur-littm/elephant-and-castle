<div class="container">
  <div class="banner">
    <div class="banner-title"><h1>ELEPHANT<small> &amp; </small>CASTLE</h1></div>
    <div class="banner-image" style="background-image: url(<%= image_path "banner.png" %>);">
    </div>
  </div>
  <div class="row promo-cards">

    <div class="col-xs-12 col-md-4">
      <div class="promo-card" style="background-image: url(<%= image_path 'instagram.jpg' %>);">
        <div class="promo-card-border">
          <div class="promo-card-title">
            <h4>INSTAGRAM</h4>
          </div>
        </div>
        <a href="https://www.instagram.com/elephantncastle_/?hl=en" class="promo-card-link"></a>
      </div>
    </div>

    <div class="col-xs-12 col-md-4">
      <div class="promo-card" style="background-image: url(<%= image_path "videos.jpg" %>);">
        <div class="promo-card-border">
          <div class="promo-card-title">
            <h4>VIDEOS</h4>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-md-4">
      <div class="promo-card" style="background-image: url(<%= image_path "people.jpg" %>);">
        <div class="promo-card-border">
          <div class="promo-card-title">
            <h4>PEOPLE</h4>
          </div>
        </div>
      </div>
    </div>

  </div>
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <div class="banner-title"><h2>RECENT POSTS</h2></div>
      <div class="row">
        <% @posts.each do |post| %>
        <div class="col-xs-12 col-md-6">
          <div class="post-index-card">
            <div class="post-index-card-image" style="background-image: url(<%= cl_image_path post.card_photo.path %>);">

            </div>
            <div class="post-index-card-category">
              <p><%= post.category.name.upcase %></p>
            </div>
            <div class="post-index-card-text">
              <h4><%= post.title %></h4>
              <p><%= post.introduction %></p>
            </div>
            <div class="post-index-card-date">
              <p>By <strong>Adriana</strong></p>
              <p><%= post.created_at.strftime('%b %d, %Y') %></p>
            </div>
            <%= link_to "", post_path(post), class: "post-index-card-link" %>
          </div>
        </div>
        <% end %>
      </div>

    </div>
    <div class="col-xs-12 col-md-4">

      <div class="sidebar-content-title">
        <h5>ABOUT US</h5>
      </div>
      <%= image_tag "adriana.jpg", class: "sidebar-content-image img-thumbnail" %>
      <div class="sidebar-content-text">
        <p>Welcome to <strong>Elephant &amp; Castle</strong>, my name is Adriana and I love photography, travelling and ... <a href="#">[read more]</a></p>
      </div>
      <ul class="list-inline sidebar-content-links">
        <li><a href="https://www.facebook.com/adriekswsk"><i class="fa fa-facebook-official fa-fw"></i></a></li>
        <li><a href="https://www.instagram.com/kosokiki/?hl=en"><i class="fa fa-instagram fa-fw"></i></a></li>
        <li><a href=""><i class="fa fa-twitter fa-fw"></i></a></li>
        <li><a href="https://www.youtube.com/channel/UC7-QSGYY7IO2o9t1nzvHuBg"><i class="fa fa-youtube fa-fw"></i></a></li>
      </ul>

      <div class="sidebar-content-title">
        <h5>EMAIL US</h5>
      </div>
      <div class="sidebar-content-email form-group">
        <form method="POST" action="http://formspree.io/arthur.littmann@gmail.com">
          <input type="email" name="email" placeholder="Your email" class="form-control">
          <input type="subject" name="subject" placeholder="Subject" class="form-control">
          <textarea name="message" placeholder="Your message" class="form-control"></textarea>
          <button type="submit" class="btn btn-primary"><i class="fa fa-paper-plane fa-fw"></i>  Send</button>
        </form>
      </div>

      <div class="sidebar-content-title">
        <h5>LATEST POSTS</h5>
      </div>
      <% @posts.first(5).each do |post| %>
      <h4><%= post.title %></h4>
      <% end %>
    </div>
  </div>

</div>

