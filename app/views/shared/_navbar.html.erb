<div class="navbar-wagon">

  <div class="navbar-wagon-left hidden-xs hidden-sm">
    <a href="/" class="navbar-wagon-brand">
      <%= image_tag "logo-white.png" %>
    </a>

    <%= link_to "About", about_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <p data-toggle="dropdown", class="dropdown-toggle navbar-wagon-link" id="navbar-wagon-menu">Posts <i class="fa fa-angle-down fa-fw"></i></p>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to 'Recent posts', posts_path(post: 'recent') %></li>
          <li><%= link_to 'Top rated posts', posts_path(post: 'top') %></li>
        </ul>
      </div>
    </div>
    <%= link_to "Videos", videos_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Photos", portraits_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <div class="navbar-wagon-item">
      <div class="dropdown">
        <p data-toggle="dropdown", class="dropdown-toggle navbar-wagon-link" id="navbar-wagon-menu">Categories <i class="fa fa-angle-down fa-fw"></i></p>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <% categories.each do |category| %>
          <li><%= link_to category.name.capitalize, search_path(category: category) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-left navbar-wagon-dropdown-menu">
        <li><%= link_to "Latest posts", posts_path %></li>
        <li><%= link_to "Videos", videos_path %></li>
        <li><%= link_to "Photos", portraits_path %></li>
        <li><%= link_to "About", about_path %></li>
      </ul>
    </div>
  </div>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <form class="navbar-wagon-search" action="/search" method="get">
      <input type="text" name="search" id="search" class="navbar-wagon-search-input" placeholder="Search">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>
  </div>
</div>
